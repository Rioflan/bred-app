FROM node:8
WORKDIR /app
COPY package.json /app
RUN npm install
COPY . /app

ARG API_SECRET

ARG API_TOKEN

ARG CLOUDINARY_URL

ARG DATABASE_MODE

ARG DATABASE_URL

ARG DB_NAME

ARG DB_PASSWORD

ARG LOGIN_REGEX

ARG NODE_ENV

ARG PAPERTRAIL_API_TOKEN

ARG AZURE_STORAGE_TOKEN

ARG AZURE_STORAGE_CONTAINER_NAME

ARG AZURE_STORAGE_BLOB_NAME

ARG ZAPIER_URL

ARG DOCKER_ENV

EXPOSE 3000

RUN npm run build
CMD [ "npm", "run", "docker" ]